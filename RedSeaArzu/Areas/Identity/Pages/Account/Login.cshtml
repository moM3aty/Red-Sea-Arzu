@page
@model RedSeaArzu.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Red Sea Arzu</title>
    <link href="~/images/logo.jpg" rel="icon" />

    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" xintegrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <link rel="icon" href="~/images/logo.jpg" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-[Cairo]">

    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <img src="~/images/logo.jpg" alt="Logo" class="w-24 h-24 rounded-full mx-auto mb-4 border-4 border-white/50 shadow-lg" />
                <h1>لوحة التحكم</h1>
            </div>
            <section>
                <form id="account" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="bg-red-500/20 text-red-200 p-3 rounded-lg mb-4 text-center" role="alert"></div>

                    <div class="login-input-group">
                        <i class="fas fa-envelope login-input-icon"></i>
                        <input asp-for="Input.Email" class="login-input px-10" autocomplete="username" aria-required="true" placeholder="البريد الإلكتروني" />
                    </div>

                    <div class="login-input-group">
                        <i class="fas fa-lock login-input-icon"></i>
                        <input asp-for="Input.Password" type="password" class="login-input px-10" autocomplete="current-password" aria-required="true" placeholder="كلمة المرور" />
                    </div>

                    <div class="pt-4">
                        <button id="login-submit" type="submit" class="login-button">تسجيل الدخول</button>
                    </div>
                </form>
            </section>
        </div>
    </div>

</body>
</html>

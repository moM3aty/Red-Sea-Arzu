@model IEnumerable<RedSeaArzu.Models.Trip>
@{
    ViewData["Title"] = "إدارة الرحلات";
    Layout = "_AdminLayout";
}

<div class="fade-in-up">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">قائمة الرحلات</h1>
        <a asp-action="CreateTrip" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            <span>إضافة رحلة جديدة</span>
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="card text-center py-12">
            <i class="fas fa-ship text-5xl text-gray-300 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-700">لا توجد رحلات بعد</h3>
            <p class="text-gray-500 mt-2">ابدأ بإضافة أول رحلة لك من الزر أعلاه.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var item in Model)
            {
                <div class="group relative rounded-lg overflow-hidden shadow-lg h-80">
                    <img src="@(item.ImageUrl ?? "https://placehold.co/400x300/e2e8f0/94a3b8?text=No+Image")"
                         alt="@item.NameEn"
                         class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-110" />

                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>

                    <div class="absolute bottom-0 left-0 right-0 p-4 text-white transition-transform duration-500 ease-in-out group-hover:-translate-y-16">
                        <h3 class="font-bold text-lg truncate">@item.NameAr</h3>
                        <p class="text-amber-400 font-semibold text-xl">$@item.Price.ToString("F2")</p>
                    </div>

                    <div class="absolute bottom-0 left-0 right-0 p-4 flex justify-end items-center gap-4 opacity-0 transition-all duration-500 ease-in-out group-hover:opacity-100 group-hover:bottom-4">
                        <a asp-action="EditTrip" asp-route-id="@item.Id" class="bg-white/20 backdrop-blur-sm text-white w-10 h-10 rounded-full flex items-center justify-center hover:bg-blue-500 transition-colors" title="تعديل">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a asp-action="DeleteTrip" asp-route-id="@item.Id" class="bg-white/20 backdrop-blur-sm text-white w-10 h-10 rounded-full flex items-center justify-center hover:bg-red-500 transition-colors" title="حذف">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>

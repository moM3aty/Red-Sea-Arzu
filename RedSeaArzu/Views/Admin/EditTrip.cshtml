@model RedSeaArzu.Models.Trip

@{
    ViewData["Title"] = "تعديل الرحلة";
    Layout = "_AdminLayout";
}

<div class="fade-in-up">
    <form asp-action="EditTrip" method="post" enctype="multipart/form-data" class="bg-white rounded-lg shadow-lg p-8 max-w-6xl mx-auto">
        <input type="hidden" asp-for="Id" />
        <div class="flex justify-between items-center mb-6 pb-6 border-b border-gray-200">
            <h1 class="text-2xl font-bold text-gray-800">تعديل: @Model.NameAr</h1>
            <div class="flex items-center gap-4">
                <a asp-action="Trips" class="btn btn-secondary">إلغاء</a>
                <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
            </div>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4 p-3 bg-red-50 rounded-md"></div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-1 space-y-6">
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">صورة الرحلة</h3>
                    <p class="text-sm text-gray-500 mb-4">يمكنك رفع صورة جديدة لتغيير الصورة الحالية.</p>
                    <div class="mt-1">
                        <div id="image-preview-container" class="cursor-pointer w-full h-64 bg-gray-50 rounded-md flex items-center justify-center border-2 border-dashed border-gray-300 hover:border-primary-color transition-colors">
                            <div id="image-placeholder" class="text-center text-gray-500 @(!string.IsNullOrEmpty(Model.ImageUrl) ? "hidden" : "")">
                                <i class="fas fa-camera text-4xl mb-2"></i>
                                <p>اسحب الصورة إلى هنا أو انقر للاختيار</p>
                            </div>
                            <img id="image-preview" src="@Model.ImageUrl" alt="Image Preview" class="@(string.IsNullOrEmpty(Model.ImageUrl) ? "hidden" : "") w-full h-full object-cover rounded-md" />
                        </div>
                        <input type="file" name="imageFile" id="imageFile" class="hidden" accept="image/*" />
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-700 mb-4">التفاصيل الأساسية</h3>
                    <div class="space-y-4">
                        <div class="form-group">
                            <label asp-for="Price" class="form-label">السعر الحالي ($)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="e.g., 55.00" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PriceBefore" class="form-label">السعر قبل الخصم ($) (اختياري)</label>
                            <input asp-for="PriceBefore" type="number" step="0.01" class="form-control" placeholder="e.g., 75.00" />
                        </div>
                        <div class="form-group">
                            <label asp-for="DurationHours" class="form-label">المدة (بالساعات)</label>
                            <input asp-for="DurationHours" type="number" class="form-control" placeholder="e.g., 8" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-2">
                <h3 class="text-lg font-semibold text-gray-700 mb-4">تفاصيل الرحلة (متعدد اللغات)</h3>
                <div class="tabs-nav">
                    <a href="#" class="tab-link active" data-tab="ar">العربية</a>
                    <a href="#" class="tab-link" data-tab="en">English</a>
                    <a href="#" class="tab-link" data-tab="de">Deutsch</a>
                    <a href="#" class="tab-link" data-tab="ro">Română</a>
                    <a href="#" class="tab-link" data-tab="it">Italiano</a>
                </div>

                <div class="pt-4">
                    <!-- Arabic Pane -->
                    <div id="ar-pane" class="tab-pane active space-y-4">
                        <div class="form-group"><label asp-for="NameAr" class="form-label">اسم الرحلة</label><input asp-for="NameAr" class="form-control" dir="rtl" /></div>
                        <div class="form-group"><label asp-for="DescriptionAr" class="form-label">الوصف</label><textarea asp-for="DescriptionAr" rows="3" class="form-control" dir="rtl"></textarea></div>
                        <div class="form-group"><label asp-for="LocationAr" class="form-label">الموقع</label><input asp-for="LocationAr" class="form-control" dir="rtl" /></div>
                        <div class="form-group"><label asp-for="IncludesAr" class="form-label">الرحلة تشمل (كل بند في سطر)</label><textarea asp-for="IncludesAr" rows="3" class="form-control" dir="rtl"></textarea></div>
                        <div class="form-group"><label asp-for="ExcludesAr" class="form-label">الرحلة لا تشمل (كل بند في سطر)</label><textarea asp-for="ExcludesAr" rows="3" class="form-control" dir="rtl"></textarea></div>
                    </div>
                    <!-- English Pane -->
                    <div id="en-pane" class="tab-pane space-y-4">
                        <div class="form-group"><label asp-for="NameEn" class="form-label">Trip Name</label><input asp-for="NameEn" class="form-control" /></div>
                        <div class="form-group"><label asp-for="DescriptionEn" class="form-label">Description</label><textarea asp-for="DescriptionEn" rows="3" class="form-control"></textarea></div>
                        <div class="form-group"><label asp-for="LocationEn" class="form-label">Location</label><input asp-for="LocationEn" class="form-control" /></div>
                        <div class="form-group"><label asp-for="IncludesEn" class="form-label">Trip Includes (one item per line)</label><textarea asp-for="IncludesEn" rows="3" class="form-control"></textarea></div>
                        <div class="form-group"><label asp-for="ExcludesEn" class="form-label">Trip Excludes (one item per line)</label><textarea asp-for="ExcludesEn" rows="3" class="form-control"></textarea></div>
                    </div>
                    <!-- German Pane -->
                    <div id="de-pane" class="tab-pane space-y-4">
                        <div class="form-group"><label asp-for="NameDe" class="form-label">Reisename</label><input asp-for="NameDe" class="form-control" /></div>
                        <div class="form-group"><label asp-for="DescriptionDe" class="form-label">Beschreibung</label><textarea asp-for="DescriptionDe" rows="3" class="form-control"></textarea></div>
                        <div class="form-group"><label asp-for="LocationDe" class="form-label">Ort</label><input asp-for="LocationDe" class="form-control" /></div>
                        <div class="form-group"><label asp-for="IncludesDe" class="form-label">Reise beinhaltet (ein Element pro Zeile)</label><textarea asp-for="IncludesDe" rows="3" class="form-control"></textarea></div>
                        <div class="form-group"><label asp-for="ExcludesDe" class="form-label">Reise schließt aus (ein Element pro Zeile)</label><textarea asp-for="ExcludesDe" rows="3" class="form-control"></textarea></div>
                    </div>
                    <!-- Romanian Pane -->
                    <div id="ro-pane" class="tab-pane space-y-4">
                        <div class="form-group"><label asp-for="NameRo" class="form-label">Numele excursiei</label><input asp-for="NameRo" class="form-control" /></div>
                        <div class="form-group"><label asp-for="DescriptionRo" class="form-label">Descriere</label><textarea asp-for="DescriptionRo" rows="3" class="form-control"></textarea></div>
                        <div class="form-group"><label asp-for="LocationRo" class="form-label">Locație</label><input asp-for="LocationRo" class="form-control" /></div>
                        <div class="form-group"><label asp-for="IncludesRo" class="form-label">Excursia include (un element pe rând)</label><textarea asp-for="IncludesRo" rows="3" class="form-control"></textarea></div>
                        <div class="form-group"><label asp-for="ExcludesRo" class="form-label">Excursia exclude (un element pe rând)</label><textarea asp-for="ExcludesRo" rows="3" class="form-control"></textarea></div>
                    </div>
                    <!-- Italian Pane (New) -->
                    <div id="it-pane" class="tab-pane space-y-4">
                        <div class="form-group"><label asp-for="NameIt" class="form-label">Nome del viaggio</label><input asp-for="NameIt" class="form-control" /></div>
                        <div class="form-group"><label asp-for="DescriptionIt" class="form-label">Descrizione</label><textarea asp-for="DescriptionIt" rows="3" class="form-control"></textarea></div>
                        <div class="form-group"><label asp-for="LocationIt" class="form-label">Posizione</label><input asp-for="LocationIt" class="form-control" /></div>
                        <div class="form-group"><label asp-for="IncludesIt" class="form-label">Il viaggio include (un elemento per riga)</label><textarea asp-for="IncludesIt" rows="3" class="form-control"></textarea></div>
                        <div class="form-group"><label asp-for="ExcludesIt" class="form-label">Il viaggio esclude (un elemento per riga)</label><textarea asp-for="ExcludesIt" rows="3" class="form-control"></textarea></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Tab switching logic
            const tabs = document.querySelectorAll('.tab-link');
            const panes = document.querySelectorAll('.tab-pane');
            tabs.forEach(tab => {
                tab.addEventListener('click', function (e) {
                    e.preventDefault();
                    tabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    const targetPaneId = this.dataset.tab + '-pane';
                    panes.forEach(p => {
                        p.style.display = p.id === targetPaneId ? 'block' : 'none';
                        p.classList.toggle('active', p.id === targetPaneId);
                    });
                });
            });

            // Image preview logic
            const imageFileInput = document.getElementById('imageFile');
            const imagePreviewContainer = document.getElementById('image-preview-container');
            const imagePreview = document.getElementById('image-preview');
            const imagePlaceholder = document.getElementById('image-placeholder');
            imagePreviewContainer.addEventListener('click', () => imageFileInput.click());
            imageFileInput.addEventListener('change', function () {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        imagePreview.src = e.target.result;
                        imagePreview.classList.remove('hidden');
                        imagePlaceholder.classList.add('hidden');
                    }
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}

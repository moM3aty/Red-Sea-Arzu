@model IEnumerable<RedSeaArzu.Models.Testimonial>

@{
    ViewData["Title"] = "آراء قيد المراجعة";
    Layout = "_AdminLayout";
}

<div class="fade-in-up">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">آراء العملاء قيد المراجعة</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="bg-white rounded-lg shadow-lg text-center py-16">
            <i class="fas fa-comment-slash text-6xl text-gray-300 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-700">لا توجد آراء جديدة</h3>
            <p class="text-gray-500 mt-2">لا يوجد شيء للمراجعة في الوقت الحالي.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
            @foreach (var item in Model)
            {
                <div class="bg-white rounded-lg shadow-lg flex flex-col h-full transition-all duration-300 hover:shadow-xl hover:transform hover:-translate-y-1">
                    <div class="p-6 flex-grow">
                        <div class="flex items-center gap-4 mb-4">
                            <div class="flex-shrink-0 bg-gray-100 w-14 h-14 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-2xl text-gray-400"></i>
                            </div>
                            <div>
                                <p class="text-lg font-bold text-gray-800 leading-tight">@item.Name</p>
                                <p class="text-sm text-gray-500">@item.Country</p>
                            </div>
                        </div>
                        <div class="bg-gray-50 p-4 rounded-md min-h-[100px]">
                            <p class="text-gray-600 text-base leading-relaxed">
                                @item.Message
                            </p>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-6 py-4 flex justify-end gap-3 border-t">
                        <form asp-action="RejectTestimonial" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-secondary">
                                <i class="fas fa-times"></i>
                                <span>رفض</span>
                            </button>
                        </form>
                        <form asp-action="ApproveTestimonial" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i>
                                <span>موافقة ونشر</span>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>
